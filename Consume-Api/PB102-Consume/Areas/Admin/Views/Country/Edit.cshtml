@model CountryEditVM
<div class="container mt-5">
    <h1 class="text-center">Country</h1>
</div>
<form class="mt-3" asp-controller="Country" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="country">Name</label>
        <input asp-for="Name" class="form-control" id="country">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="population">Population</label>
        <input asp-for="Population" min="0" class="form-control" id="population">
        <span class="text-danger" asp-validation-for="Population"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>