@model CityEditVM

<div class="container mt-5">
    <h1 class="text-center">Edit City</h1>
</div>

<form class="mt-3" asp-controller="City" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="city">City Name</label>
        <input asp-for="Name" class="form-control" id="city" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label for="CountryId">Country</label>
        <select asp-for="CountryId" class="form-control" asp-items="@(ViewData["Countries"] as SelectList)">
            <option value="">Select Country</option>
        </select>
        <span class="text-danger" asp-validation-for="CountryId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
    <a href="@Url.Action("Index", "City")" class="btn btn-secondary ml-3">Back</a>
</form>
